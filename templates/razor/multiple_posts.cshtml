@{
    Layout = "layout.cshtml"
}

@using RazorEngine.Templating
@using Firm.Models

@for(var post in @Model.Posts)
{
    <div class="post">
        <h1 class="post-title">@post.Title</h1>
        <div class="post-author">@post.Date</div>
        <div class="post-content">@Raw(Helpers.WriteHtml(post))</div>
    </div>
    </div>
        <div class="comment-count"><a href="/blog/post/@post.Url#disqus_thread">Click here to see comments</a></div>
    </div>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = '@Model.BlogName'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function () {
            var s = document.createElement('script'); s.async = true;
            s.type = 'text/javascript';
            s.src = '//' + disqus_shortname + '.disqus.com/count.js';
            (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
        }());
    </script>
}